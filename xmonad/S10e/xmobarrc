-- vim: ft=haskell
Config { font = "xft:Migu 1M:size=10.5"
       , bgColor = "#1c1c1c"
       , fgColor = "#585858"
       -- , position = TopSize C 100 25
       , position = Static { xpos = 7 , ypos = 0, width = 1011, height = 25 }
       , lowerOnStart = False
       , overrideRedirect = False
       , border = FullB
       , borderColor = "#585858"
       , commands = [ Run Network "wlan0" [ "-t"       , "wlan0: <rx>  <tx>   "
                                          , "-L"       , "40"
                                          , "-H"       , "200"
                                          , "-m"       , "3"
                                          , "--normal" , "#bdbdbd"
                                          , "--high"   , "#95b595"
                                          ] 10
                    , Run MultiCpu        [ "-t"       , "<total0>.<total1>   "
                                          , "-L"       , "40"
                                          , "-H"       , "85"
                                          , "-m"       , "2"
                                          , "--normal" , "#bdbdbd"
                                          , "--high"   , "#b99595"
                                          ] 10

                    , Run Memory          [ "-t"       , "<usedratio>%   "
                                          , "-L"       , "40"
                                          , "-H"       , "90"
                                          , "-m"       , "2"
                                          , "--normal" , "#bdbdbd"
                                          , "--high"   , "#b99595"
                                          ] 10
                    , Run Battery         [ "-t"       , "<acstatus> <left>% "
                                          , "-L"       , "20"
                                          , "-H"       , "80"
                                          , "--low"    , "#b99595"
                                          , "--normal" , "#bdbdbd"
                                          , "--"
                                                , "-o" , "(<timeleft>)"
                                                , "-O" , "Charging"
                                                , "-i" , ""
                                          ] 50
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %multicpu%%memory%%wlan0%%battery%<fc=#aea386>%date%</fc> "
       }

