#!/bin/sh
# written by Shotaro Fujimoto (https://github.com/ssh0)
# first edited: 2015-06-23

show_usage() {
  echo "youtube-dl_listwrap: Wrapper script for youtube-dl."
  echo ""
  echo "Usage: youtube-dl_listwrap [-h] [-A] [-L FILE] URL [youtube-dl options]"
  echo ""
  echo "NOTE: You should place the URL *before* the youtube-dl's options."
  echo ""
  echo "Option:"
  echo "  -A: Don't add the URL to list file"
  echo "  -L: Set the list file to save URL (default file: 'list')"
  echo "  -h: Show this help message"
}

listfile=list
save=true

while getopts AL:h OPT
do
  case $OPT in
    "A" ) save=false ;;
    "L" ) listfile="${OPTARG}" ;;
    "h" ) show_usage;
          exit 0 ;;
  esac
done

shift $((OPTIND-1))
if [ $# = 0 ];then
  show_usage
  exit 1
fi

if ${save}; then
  title=$(youtube-dl -i -q -e "$1")
  if [ ! -f "${listfile}" ]; then
    touch "${listfile}"
  fi
  for t in "$title"; do
    echo "# $t" >> "${listfile}"
  done
  echo "# $1" >> "${listfile}"
fi

youtube-dl -i -o "%(title)s.%(ext)s" "$@"
