
# Folder hooks
folder-hook 'account.com.gmail.藤本將太郎' 'source ~/Dropbox/conf/account.com.gmail.藤本將太郎'
folder-hook 'account.com.waseda.藤本將太郎' 'source ~/Dropbox/conf/account.com.waseda.藤本將太郎'

# Default account
source ~/Dropbox/conf/account.com.gmail.藤本將太郎

# Set default text editor
set editor = "$EDITOR"

#------------------------------------------------------------------------------
# Basic Config                                                              {{{
#------------------------------------------------------------------------------

set imap_check_subscribed
# set hostname = gmail.com
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set spoolfile = "+INBOX"

set move = no
set pager_stop = yes
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
ignore *
unignore from: subject to cc date
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html

#---------------------------------------------------------------------------}}}
# Color Theme                                                               {{{
#------------------------------------------------------------------------------

color normal     white    color234
color tilde      color235 color234
color hdrdefault cyan     color234
color attachment yellow   color234
color error      red      color234
color message    white    color234
color indicator  green    black
color status     white    black
color tree       red      color234
color search     black    blue
color markers    red      color234

color header brightyellow color234 "From: "
color header brightyellow color234 "Subject: "
color header brightyellow color234 "Date: "

color quoted  green color234
color quoted1 cyan  color234
color quoted2 green color234
color quoted3 cyan  color234

color index yellow    color234 '~O'
color index yellow    color234 '~N'
color index brightred color234 '~F'    
color index blue      default  '~D'

#---------------------------------------------------------------------------}}} 
# Bindings                                                                  {{{
#------------------------------------------------------------------------------

bind pager / search
bind pager <up> previous-line
bind pager <down> next-line
bind pager \cy previous-line
bind pager \ce next-line
bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom
bind pager \cd half-down
bind pager \cu half-up
bind pager \cf next-page
bind pager \cb previous-page
bind pager i noop

bind index gg first-entry
bind index G last-entry
bind index \cd half-down
bind index \cu half-up
bind index \cf next-page
bind index \cb previous-page
bind index i noop

bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop 

#---------------------------------------------------------------------------}}} 
# Macros                                                                    {{{
#------------------------------------------------------------------------------

macro index <F12> '<sync-mailbox><enter-command>source ~/Dropbox/conf/account.com.gmail.藤本將太郎<enter><change-folder>!<enter>'
macro index <F11> '<sync-mailbox><enter-command>source ~/Dropbox/conf/account.com.waseda.藤本將太郎<enter><change-folder>!<enter>'

macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to drafts"

#---------------------------------------------------------------------------}}} 
